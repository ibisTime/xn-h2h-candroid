<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_gray_app">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_page_top_bg"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:text="@string/mind"
                        android:textColor="@color/white"
                        android:textSize="@dimen/top_center_title_size" />

                    <ImageView
                        android:id="@+id/img_setting"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/setting" />

                </FrameLayout>

                <LinearLayout
                    android:id="@+id/lin_user_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_left_right_interval"
                    android:layout_marginTop="20dp">

                    <ImageView
                        android:id="@+id/img_user_logo"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/photo_default" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_user_name"
                            style="@style/text_white"
                            android:layout_marginTop="8dp"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textSize="16sp"
                            tools:text="13000202020" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:orientation="horizontal"
                            android:weightSum="2.5">

                            <LinearLayout
                                android:id="@+id/lin_guanzhu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <TextView
                                    style="@style/text_white"
                                    android:layout_width="40dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="关注"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_follow_sum"
                                    style="@style/text_white"
                                    android:layout_width="wrap_content"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    tools:text="2424" />


                            </LinearLayout>

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="match_parent"
                                android:background="@color/white" />

                            <LinearLayout
                                android:id="@+id/lin_fans"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="15dp"
                                android:layout_weight="1"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/textView6"
                                    style="@style/text_white"
                                    android:layout_width="45dp"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:text="粉丝"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_fans_num"
                                    style="@style/text_white"
                                    android:layout_weight="1"
                                    android:ellipsize="end"
                                    android:maxLines="1"
                                    android:textSize="16sp"
                                    tools:text="2424" />


                            </LinearLayout>
                        </LinearLayout>


                    </LinearLayout>

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/more_right_white" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/lin_my_account"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:weightSum="2">

                    <TextView
                        style="@style/text_black"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="余额："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_amount"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="@string/_0_00"
                        android:textColor="@color/text_select_app"
                        android:textSize="16sp" />

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_jf_list"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:gravity="center"
                    android:weightSum="2">

                    <TextView
                        style="@style/text_black"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="积分："
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_amount_jf"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text="0"
                        android:textColor="@color/text_select_app"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_all_order"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    style="@style/text_black"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/layout_left_right_interval"
                    android:text="我的订单"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="查看更多"
                    android:textColor="@color/text_gray_app" />

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/layout_left_right_interval"
                    android:src="@drawable/more_right" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:weightSum="5">

                <com.cdkj.h2hwtw.other.view.OrderBadgeView
                    android:id="@+id/lin_order_waite_pay"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    app:badge_img="@drawable/waite_pay"
                    app:badge_title="待付款" />

                <com.cdkj.h2hwtw.other.view.OrderBadgeView
                    android:id="@+id/lin_order_waite_send"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    app:badge_img="@drawable/waite_push"
                    app:badge_title="待发货" />

                <com.cdkj.h2hwtw.other.view.OrderBadgeView
                    android:id="@+id/lin_order_waite_get"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    app:badge_img="@drawable/waite_get"
                    app:badge_title="待收货" />

                <com.cdkj.h2hwtw.other.view.OrderBadgeView
                    android:id="@+id/lin_order_waite_say"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    app:badge_img="@drawable/get_product"
                    app:badge_title="待评价" />

                <com.cdkj.h2hwtw.other.view.OrderBadgeView
                    android:id="@+id/lin_order_done"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    app:badge_img="@drawable/evaluation_ed"
                    app:badge_title="已完成" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lin_i_release"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/release_me" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="我发布的"
                        android:textColor="@color/my_page_txt_black_app" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_i_sell"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/sale_me" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="我卖出的"
                        android:textColor="@color/my_page_txt_black_app" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_add_preferential"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/party_done" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="活动报名"
                        android:textColor="@color/my_page_txt_black_app" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0.5dp"
                android:weightSum="3">

                <LinearLayout
                    android:id="@+id/lin_i_want"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/want_red" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="我想要的"
                        android:textColor="@color/my_page_txt_black_app" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_browse"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0.5dp"
                    android:layout_marginRight="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/footer_me" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="我的足迹"
                        android:textColor="@color/my_page_txt_black_app" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_cooupons"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/coupons" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="优惠券"
                        android:textColor="@color/my_page_txt_black_app" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</layout>
