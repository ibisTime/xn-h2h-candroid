<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_gray_app"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_order_code"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:paddingTop="15dp"
                    android:text="订单号:" />

                <TextView
                    android:id="@+id/tv_order_create_data"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:text="下单时间:" />

                <TextView
                    android:id="@+id/tv_order_state"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:text="订单状态:" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_weight="1"
                        android:text="收货人:"
                        android:textColor="@color/fontColor_gray"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/layout_left_right_interval"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:textColor="@color/fontColor_gray"
                        android:textSize="16sp"
                        tools:text="18984955240" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_name"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:paddingTop="10dp"
                    android:text="收货地址："
                    android:textColor="@color/fontColor_gray"
                    android:textSize="14sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <ImageView
                        android:id="@+id/img_good"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="centerCrop"
                        tools:src="@mipmap/icon" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_order_name"
                            style="@style/text_black"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            tools:text="sdfsf" />

                        <TextView
                            android:id="@+id/tv_order_info"
                            style="@style/text_gray"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="15dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            tools:text="sdfsf" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_price"
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/layout_left_right_interval"
                        tools:text="X1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/line_height_app"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="商品总额" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_order_price_all"
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/layout_left_right_interval"
                        tools:text="sdfsf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/line_height_app"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="运费" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tv_yunfei"
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="@dimen/layout_left_right_interval"
                        tools:text="sdfsf" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/line_height_app"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="10dp"
                        android:text="支付总价:"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_order_price_all_2"
                        style="@style/text_black"
                        android:layout_gravity="bottom"
                        android:layout_marginRight="@dimen/layout_left_right_interval"
                        android:textSize="16sp"
                        tools:text="支付总价" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_pay_info"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:paddingTop="10dp"
                    tools:text="支付说明:" />

                <TextView
                    android:id="@+id/tv_logisticsCompany"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:paddingTop="10dp"
                    android:text="物流公司:" />

                <TextView
                    android:id="@+id/tv_logisticsCode"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/line_height_app"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:paddingTop="10dp"
                    android:text="物流单号:" />

                <TextView
                    android:id="@+id/tv_remark"
                    style="@style/text_black"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="45dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:paddingBottom="10dp"
                    android:paddingLeft="@dimen/layout_left_right_interval"
                    android:paddingRight="@dimen/layout_left_right_interval"
                    android:paddingTop="10dp"
                    android:text="买家嘱咐:" />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_cancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/text_black_app"
                android:visibility="gone"
                tools:text="取消订单" />

            <TextView
                android:id="@+id/tv_state_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/btn_click_un_app"
                android:gravity="center"
                android:textColor="@color/white"
                tools:text="取消订单" />


        </LinearLayout>


    </LinearLayout>
</layout>
