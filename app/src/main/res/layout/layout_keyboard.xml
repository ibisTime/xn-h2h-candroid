<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/keybooard_height"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/tv_key_1"
                    style="@style/text_calculate_number"
                    android:tag="1"
                    android:text="1" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_2"
                    style="@style/text_calculate_number"
                    android:tag="2"
                    android:text="2" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_3"
                    style="@style/text_calculate_number"
                    android:tag="3"
                    android:text="3" />

            </LinearLayout>

            <View style="@style/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/keybooard_height"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_key_4"
                    style="@style/text_calculate_number"
                    android:tag="4"
                    android:text="4" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_5"
                    style="@style/text_calculate_number"
                    android:tag="5"
                    android:text="5" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_6"
                    style="@style/text_calculate_number"
                    android:tag="6"
                    android:text="6" />

            </LinearLayout>

            <View style="@style/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/keybooard_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_key_7"
                    style="@style/text_calculate_number"
                    android:tag="7"
                    android:text="7" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_8"
                    style="@style/text_calculate_number"
                    android:tag="8"
                    android:text="8" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_9"
                    style="@style/text_calculate_number"
                    android:tag="9"
                    android:text="9" />

            </LinearLayout>

            <View style="@style/line_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/keybooard_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_key_null"
                    style="@style/text_calculate_number"
                    android:background="@color/white"
                    android:tag="."
                    android:text="" />

                <View style="@style/style_split_vline" />

                <TextView
                    android:id="@+id/tv_key_0"
                    style="@style/text_calculate_number"
                    android:tag="0"
                    android:text="0" />

                <View style="@style/style_split_vline" />

                <FrameLayout
                    android:id="@+id/fra_cancel"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/selector_gray">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/keyboard_down" />

                </FrameLayout>

            </LinearLayout>

            <View style="@style/line_gray" />
        </LinearLayout>

        <View style="@style/style_split_vline" />

        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">

            <FrameLayout
                android:id="@+id/fra__delete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_gray">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/keyboard_delete" />

            </FrameLayout>

            <Button
                android:id="@+id/btn_sure"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/selector_btn_keybooard"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/white">


            </Button>


        </LinearLayout>


    </LinearLayout>
</layout>
